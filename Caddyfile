h-arya.duckdns.org {
    encode zstd gzip

    @api path /api/*
    request_body @api {
        max_size 2MB
    }

    reverse_proxy localhost:3000 {
        health_uri /api/health
        health_interval 30s
        health_timeout 5s

        transport http {
            dial_timeout 5s
            response_header_timeout 30s
            read_timeout 30s
            write_timeout 30s
        }
    }
}
